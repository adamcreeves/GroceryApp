<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        <TextView
            android:id="@+id/payment_address_headline_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Order Shipping To:"
            android:textColor="@color/colorTextDark"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_payment_change_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_toRightOf="@id/payment_address_headline_text_view"
            android:layout_weight="1"
            android:background="#fff"
            android:padding="8dp"
            android:text="Change Address"
            android:textColor="@color/colorTextDark"
            android:textSize="12dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/text_view_payment_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="First Name"
            android:textColor="@color/colorTextDark"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_payment_house_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:text="HouseNo"
                android:textColor="@color/colorTextDark"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/text_view_payment_street_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Street Name"
                android:textColor="@color/colorTextDark"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_payment_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:text="City"
                android:textColor="@color/colorTextDark"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/text_view_payment_pincode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:text="Pincode"
                android:textColor="@color/colorTextDark"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/text_view_payment_address_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type"
                android:textColor="@color/colorTextDark"
                android:textSize="20dp" />

        </LinearLayout>

        <TextView
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Payment Method:"
            android:textColor="@color/colorTextDark"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/text_view_payment_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cash or Credit Card"
            android:textColor="@color/colorTextDark"
            android:textSize="20dp" />

        <TextView
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Products to Purchase:"
            android:textColor="@color/colorTextDark"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/text_view_payment_products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="All Items in recycler view here"
            android:textColor="@color/colorTextDark"
            android:textSize="20dp" />
    </LinearLayout>
</RelativeLayout>